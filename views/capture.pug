doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Web Image Capture
        link(rel="stylesheet" type='text/css' href="/css/styles.css")
    body
        div(class="capture-body")
            div(class="capture-header")
                div(class="logo")
                    img(src="/images/Webic.png" alt="WebIC Logo" width="120")
            main 
                form(action="/api/capture" method="post")
                    div 
                        input(type="text" class="website-link-input" name="link" placeholder="Enter website link e.g, example.com" required="required")
                    div 
                        input(type="submit" class="capture-btn" value="CAPTURE SCREENSHOTS")
            include ./partials/footer